{
  "manifest_version": 3,
  "name": "Rainfall Data Fetcher",
  "version": "1.1",
  "description": "Fetches IFD data from BOM and rainfall data from ARR based on coordinates.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://www.bom.gov.au/*",
    "https://data.arr-software.org/*"
  ]
}
